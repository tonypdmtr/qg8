void kbi_conf(void){
	KBISC=(KBISC_KBIMOD|!KBISC_KBIE|KBISC_KBACK);
	
	PTAPE_PTAPE0=1;
	PTAPE_PTAPE1=1;
	PTAPE_PTAPE2=1;
	PTAPE_PTAPE3=1;
	
	KBIPE_KBIPE0=1;
	KBIPE_KBIPE1=1;
	KBIPE_KBIPE2=1;
	KBIPE_KBIPE3=1;
	
	KBISC_KBACK=1;
	
	KBISC_KBIE=1;
	
}

